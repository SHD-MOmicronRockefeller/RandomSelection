{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "QMake: Configure",
            "type": "shell",
            "command": "if not exist build mkdir build && cd build && qmake .. -spec win32-g++",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "自动创建build目录并生成Makefile(qmake适配MinGW),无需手动指定Qt路径"
        },
        {
            "label": "QMake: Build",
            "type": "shell",
            "command": "cd build && mingw32-make -j${env:NUMBER_OF_PROCESSORS}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*?)(\\((\\d+),(\\d+)\\))?:\\s+(error|warning):\\s+(.*)$",
                    "file": 1,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            },
            "dependsOn": "QMake: Configure",
            "detail": "多核编译项目(自动适配CPU核心数),依赖qmake配置步骤"
        },
        {
            "label": "QMake: Clean",
            "type": "shell",
            "command": "if exist build (cd build && mingw32-make clean) && rmdir /s /q build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "先清理编译产物,再删除build目录,彻底重置构建环境"
        }
    ]
}